<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
  <appenders>
    <Console name="Console" target="SYSTEM_ERR">
      <!-- ThreadContext: %x = stack, %X = map-->
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{[%t] %30logger{2} [%-5level]} %X %msg %throwable{50}%n"/>
    </Console>
  </appenders>
  <loggers>
    <root level="WARN">
      <appender-ref ref="Console"/>
    </root>
